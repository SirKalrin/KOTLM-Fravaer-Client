@model ServiceGateways.Entities.User

@{
    ViewBag.Title = "Delete";
}

<h2>Slet</h2>

<h3>Er du sikker på at du vil slette @Model.FirstName @Model.LastName?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Fornavn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            Efternavn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            Brugernavn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        
        <dt>
            Afdeling
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Department.Name)
        </dd>
        
        <dt>
            Rolle
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Role)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Slet" class="btn btn-danger" /> |
            <div class="btn btn-warning">@Html.ActionLink("Annuller", "Details", new {id = Model.Id}, new {
                style="text-decoration:none; color:white;"})</div>
        </div>
    }
</div>
