@model IEnumerable<ServiceGateways.Entities.Department>

@{
    ViewBag.Title = "Index";
}

<h2>Afdelinger</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <div class="btn btn-success">
                    @Html.ActionLink("Detaljer", "Details", new { id = item.Id }, new
               {
                   style = "text-decoration:none; color:white;"
               })
                </div>

                <div class="btn btn-warning">
                    @Html.ActionLink("Redigier", "Edit", new { id = item.Id }, new
               {
                   style = "text-decoration:none; color:white;"
               })
                </div>
                
                <div class="btn btn-danger">
                    @Html.ActionLink("Slet", "Delete", new { id = item.Id }, new
                       {
                           style = "text-decoration:none; color:white;"
                       })
                </div>
            </td>
        </tr>
    }

</table>
<div class="btn btn-success">
    @Html.ActionLink("Ny Afdeling", "Create", "Departments", null, new
{
    style = "text-decoration:none; color:white;"
})
</div>
<div class="btn btn-warning">
    @Html.ActionLink("Tilbage", "Index", "Users", null, new
   {
       style = "text-decoration:none; color:white;"
   })
</div>
